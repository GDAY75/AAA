<div class="contact-wrapper" data-sidebar-target="pieces">
  <div class="contact-card">
    <h1>Contact</h1>

    <% if @success %>
      <div class="contact-flash success"><%= @success %></div>
    <% end %>
    <% if @errors.any? %>
      <div class="contact-flash error"><%= @errors.join(" • ") %></div>
    <% end %>

    <%= form_with model: @contact, url: contact_path, scope: :contact, local: true, html: { class: "contact-form" } do |f| %>
      <div class="form-row">
        <%= f.label :name, "Nom" %>
        <%= f.text_field :name, placeholder: "Votre nom" %>
      </div>

      <div class="form-row">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, placeholder: "vous@exemple.com" %>
      </div>

      <div class="form-row">
        <%= f.label :subject, "Sujet" %>
        <%= f.text_field :subject, placeholder: "Sujet de votre message" %>
      </div>

      <div class="form-row">
        <%= f.label :message, "Message" %>
        <%= f.text_area :message, rows: 6, placeholder: "Votre message..." %>
      </div>

      <div class="form-actions">
        <%= f.submit "Envoyer", class: "btn-contact" %>
      </div>
    <% end %>

    <div class="contact-infos">
      <p class="hint">Ou écrivez-nous : <a href="mailto:assodesacteursanonymes@gmail.com">assodesacteursanonymes@gmail.com</a></p>
    </div>
  </div>
</div>
