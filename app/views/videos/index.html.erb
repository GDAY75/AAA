<div class="video-grid" data-controller="videothumb">
  <% @pieces.each do |piece| %>
    <% piece.videos.each do |v| %>
      <div class="video-card" data-videothumb-target="card">
        <div class="thumb-wrap">
          <img data-videothumb-target="img" alt="<%= v.title %>" />
          <div class="play-badge">â–¶</div>
        </div>
        <span data-videothumb-target="src" data-src="<%= asset_path(v.file) %>"></span>
        <div class="video-meta">
          <p class="video-title"><%= v.title %></p>
          <p class="video-provider">Local</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

